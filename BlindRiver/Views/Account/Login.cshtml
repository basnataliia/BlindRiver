@model BlindRiver.Models.LoginModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<hgroup class="title">
    @*<h1>@ViewBag.Title.</h1>*@
</hgroup>

<section id="loginForm">
<h2>Use a local account to log in.</h2>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Log in Form</legend>
        <br />
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName, new { @class = "label" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-input" })
                @Html.ValidationMessageFor(m => m.UserName)
                <br />
            </li>
            <li>
                @Html.LabelFor(m => m.Password, new { @class = "label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-input" })
                @Html.ValidationMessageFor(m => m.Password)
                <br />
            </li>
            <li>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </li>
        </ol>
        <br />
        <input type="submit" value="Log in" class="button-blue" />
    </fieldset>
    <p>
        @Html.ActionLink("Register", "Register") if you don't have an account.
    </p>
}
</section>

