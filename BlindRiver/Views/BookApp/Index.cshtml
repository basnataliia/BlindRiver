@model IEnumerable<BlindRiver.Models.bookApp>

@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    ViewBag.Title = "Index";
}

<h2>All Appoinments</h2>
<ul>
    <!--displays every appointment in database-->
    @foreach(var x in Model)
    { 
        <li>@Html.ActionLink(x.name, "Details", new { id = x.id})</li>
    }
</ul>
<br /><br />    
<button class="apply">@Html.ActionLink("Insert", "Insert","BookApp")</button>