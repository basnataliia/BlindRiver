@model IEnumerable<BlindRiver.Models.FAQ>
@{
    ViewBag.Title = "FAQ";
}
@*Applies admin layout css to page*@
@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}    

<div id="faqContainer">
    <h1>Blind River FAQ</h1>
    @*Button to insert new FAQ, redirects to Insert page*@
    <button class="vapply">@Html.ActionLink("Insert New FAQ", "Insert", "FAQ")</button>
    <br /><br />

    @foreach (var FAQ in Model)
    {

       <h3>@FAQ.questions</h3>  
       <br />
       <p>@FAQ.answers</p>
       <br />
        //Buttons to direct you to update page or delete page by referring to the FAQ id.
       <button class="vapply">@Html.ActionLink("Update", "Update", new {id = FAQ.id })</button>
       <button class="vapply">@Html.ActionLink("Delete", "Delete", new {id= FAQ.id})</button>
        <br /><br />
       <hr />
    }
</div>
