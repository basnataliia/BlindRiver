@model BlindRiver.Models.Volunteer_Opportunity

@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@{
    ViewBag.Title = "Update";
}
<div id="volunteerContainer">
    <h1>Update Volunteer Position</h1>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(x => x.id)

        <h3>Position:</h3>
        @Html.TextBoxFor(model => model.position, new { @class = "vform-input" })
        @Html.ValidationMessageFor(model => model.position, "*")
        
        <h3>Description:</h3>
        @Html.TextAreaFor(model => model.description, new { @class = "vtform-input" })
        @Html.ValidationMessageFor(model => model.description, "*")
 
        <h3>Volunteer Position Code:</h3>
        @Html.TextBoxFor(model => model.code, new { @class = "vform-input" })
        @Html.ValidationMessageFor(model => model.code, "*")
        <br /><br />
        <input class="vapply" type="submit" value="Update" />

    }
    <br /><br />
    <hr />
    
    <button class="vapply">@Html.ActionLink("Back", "Admin", new { id = Model.id })</button>

</div>
    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval")

    }
