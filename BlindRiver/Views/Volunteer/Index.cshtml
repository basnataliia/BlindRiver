@model IEnumerable<BlindRiver.Models.Volunteer_Opportunity>
@{
    ViewBag.Title = "Index";
}
<div id="volunteerContainer">
    <h1>Current Volunteer Opportunities</h1>
    <p>
        Volunteers are one of the most valued aspects of the hospital community. Many volunteers ranging from students to seniors help out
        and sacrifice their time to improve quality and patient experience at Blind River hospital.
    </p>
    <p>
        If you would like to assist in improving the lives of our patients, residents and their families, please take a look at our
        volunteer positions available to see if you would be a suitable volunteer for the Blind River hospital. Apply to become
        a volunteer, make a difference!
    </p>
    <hr />
    <br />

    @*Shows all volunteer opportunities*@

        @foreach (var VolunteerOpportunities in Model)
        {

            <h1>@VolunteerOpportunities.position</h1>
            
            <h4>Description:</h4>
            @VolunteerOpportunities.description

            <h4>Volunteer Position Code:</h4>
            @VolunteerOpportunities.code
            <br /><br />
            //Apply button to redirect user to application page. They will be able to apply for volunteer positions
            <button class="vapply">@Html.ActionLink("Apply", "Application")</button>
            <br /><br />
            <hr />
        }
</div>
