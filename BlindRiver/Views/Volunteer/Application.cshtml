@model BlindRiver.Models.VolunteerAppValidation

@{
    ViewBag.Title = "Volunteer Application";
}


<h2>Volunteer Application</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    @Html.LabelFor(model => model.First_Name)
    @Html.TextBoxFor(model => model.First_Name)
    @Html.ValidationMessageFor(model => model.First_Name, "*")
    <br />

    @Html.LabelFor(model => model.Last_Name)
    @Html.TextBoxFor(model => model.Last_Name)
    @Html.ValidationMessageFor(model => model.Last_Name, "*")
    <br />

    @Html.LabelFor(model => model.Email)
    @Html.TextBoxFor(model => model.Email)
    @Html.ValidationMessageFor(model => model.Email, "*")
    <br />

    @Html.LabelFor(model => model.Phone)
    @Html.TextBoxFor(model => model.Phone)
    @Html.ValidationMessageFor(model => model.Phone, "*")
    <br />

    @Html.LabelFor(model => model.Address1)
    @Html.TextBoxFor(model => model.Address1)
    @Html.ValidationMessageFor(model => model.Address1, "*")
    <br />

    @Html.LabelFor(model => model.Address2)
    @Html.TextBoxFor(model => model.Address2)
    @Html.ValidationMessageFor(model => model.Address2, "*")
    <br />

    @Html.LabelFor(model => model.City)
    @Html.TextBoxFor(model => model.City)
    @Html.ValidationMessageFor(model => model.City, "*")
    <br />

    @Html.LabelFor(model => model.Province)
    @Html.TextBoxFor(model => model.Province)
    @Html.ValidationMessageFor(model => model.Province, "*")
    <br />

    @Html.LabelFor(model => model.Postal_Code)
    @Html.TextBoxFor(model => model.Postal_Code)
    @Html.ValidationMessageFor(model => model.Postal_Code, "*")
    <br /><br />
    
    @Html.LabelFor(model => model.Position_Code)
    @Html.TextBoxFor(model => model.Position_Code)
    @Html.ValidationMessageFor(model => model.Position_Code, "*")
    

    <br /><br />
    <input type="submit" value="Apply" />

}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")

}