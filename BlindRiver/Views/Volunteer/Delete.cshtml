@model BlindRiver.Models.Volunteer_Opportunity

@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to delete the following Volunteer Position? </h2><br />
<p>
    Volunteer Position: @Model.position<br /><br />
    Description: @Model.description<br /><br />
    Volunteer Position Code: @Model.code
</p>

<br /><br />
@using (Html.BeginForm())
{
    <div>
        <input type="submit" value="Delete" />
        <br /><br />
        @Html.ActionLink("Back", "Admin", new { id = Model.id })
    </div>

}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")

}