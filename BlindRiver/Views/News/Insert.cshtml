@model BlindRiver.Models.news_post

@{
    ViewBag.Title = "Insert New News Post";
}

<div id="news-insert">
<h2>Insert New News Post</h2>
@using (Html.BeginForm()) { 
    
    @Html.ValidationSummary()
        
        @Html.LabelFor(model => model.date)
        @Html.TextBoxFor(model => model.date,new { @class = "form-input" })
        @Html.ValidationMessageFor(model => model.date, "*")
    <br /><br />
        
        @Html.LabelFor(model => model.heading)
        @Html.TextBoxFor(model => model.heading, new { @class = "form-input"})
        @Html.ValidationMessageFor(model => model.heading, "*")
    <br /><br />
    
        @Html.LabelFor(model => model.details)
        @Html.TextBoxFor(model => model.details, new { @class = "form-textarea"})
        @Html.ValidationMessageFor(model => model.details, "*")
    <br /><br />
           
    <input type="submit" class="button-blue" value="Insert" /><br />   
}
