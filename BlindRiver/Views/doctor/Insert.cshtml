@model BlindRiver.Models.doctor

@{
    ViewBag.Title = "Insert Doctor";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<div class="wrapper-admin">
<h2>Add A New Doctor</h2>

@using (Html.BeginForm("Insert", "doctor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="admin-input">
    @Html.LabelFor(model => model.firstName, "First Name: ")
    @Html.TextBoxFor(model => model.firstName, new { @class = "form-input" })
    @Html.ValidationMessageFor(model => model.firstName, "*Required")
    </div>
    <div class="admin-input">
    @Html.LabelFor(model => model.lastName)
    @Html.TextBoxFor(model => model.lastName, new { @class = "form-input" })
    @Html.ValidationMessageFor(model => model.lastName, "*Required")
    </div>
        <div class="admin-input">
    @Html.LabelFor(model => model.title)
    @Html.TextBoxFor(model => model.title, new { @class = "form-input" })
    @Html.ValidationMessageFor(model => model.title, "*Required")
    </div>
    <div class="admin-input">
    @Html.LabelFor(model => model.department)
    @Html.TextBoxFor(model => model.department, new { @class = "form-input" })
    @Html.ValidationMessageFor(model => model.department, "*Required")
    </div>
    <div class="admin-input">
    @Html.LabelFor(model => model.phone)
    @Html.TextBoxFor(model => model.phone, new { @class = "form-input" })
    @Html.ValidationMessageFor(model => model.phone, "*Please enter a valid phone number")
    </div>
    <div class="admin-input">
    @Html.LabelFor(model => model.email)
    @Html.TextBoxFor(model => model.email, new { @class = "form-input" })
    @Html.ValidationMessageFor(model => model.email, "*Please enter a valid email")
    </div>
    <div class="admin-input">
    <p>Image Attachment: <input type="file" name="imgPath" /></p>
    </div>
    <input type="submit" value="Add New Doctor" onclick="return confirm('Confirm doctor insert?')" />
}
    </div>

<h2>@Html.ActionLink("Back", "Manager")</h2>
@section Scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }
