@model BlindRiver.Models.careerapp
@{
    ViewBag.Title = "Submit Application";
}

<div id="doctorsContainer">
<h1>Submit a Job Application</h1>
    <p>Please fill out the form below to apply for any of the positions listed on our @Html.ActionLink("career opportunities","index") page. We thank all candidates for their application(s), however due to the volume of applications we receive only candidates who are selected for an interview will be contacted. Please include the correct job code for the position you are applying for. Job codes are listed in the details of the job posting.</p>
    <br />
    <hr />
    @using (Html.BeginForm()) {
        <p>Job Code: @Html.TextBoxFor(x => x.jobcode)</p> 
        <p>First Name: @Html.TextBoxFor(x => x.fname)</p>
        <p>Last Name: @Html.TextBoxFor(x => x.lname)</p>
        <p>Your email: @Html.TextBoxFor(x => x.email)</p>
        <p>Your phone number: @Html.TextBoxFor(x => x.phone)</p>
        <p>Cover Letter: @Html.TextAreaFor(x => x.coverletter)</p>
        <p>Resume Attachment: @Html.TextBoxFor(x => x.resume)</p>
        <input class="apply" type="submit" value="Submit Application" />
        

        
    }

    <div class="clearfix"></div>
    <hr />
    <button class="apply">@Html.ActionLink("Back to Jobs", "index")</button>
    </div>

@section Scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }
