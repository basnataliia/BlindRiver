@* Admin page of a  service to delete a service *@
@model BlindRiver.Models.service

@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    ViewBag.Title = "Delete News:" + @Model.service_name;
}
<div id="service-delete">

<h2>Are you Sure you Want to Delete <em>@Model.service_name?</em></h2>
@using (Html.BeginForm()) { 
    
        <input type="submit" value="Delete" />
        <br /><br />
       <button class="apply">@Html.ActionLink("Back", "Details", new { id=Model.id})</button> 
   
}

</div>
@* end of service-delete *@