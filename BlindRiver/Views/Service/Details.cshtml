@model BlindRiver.Models.service

@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    ViewBag.Title = "Details";
}

<div id="service-detail">

<h2>Our Service: @Model.service_name</h2>

<p>Service Name: @Html.DisplayFor(x=>x.service_name)</p><br />
<p>Detail: @Html.DisplayFor(x=>x.details)</p><br />
<p>Photo: @Html.DisplayFor(x=>x.photo)</p><br />

<p>
    <button class="apply">@Html.ActionLink("Back", "Index")</button> 
    <button class="apply">@Html.ActionLink("Update", "Update", new {  id=Model.id})</button> 
    <button class="apply">@Html.ActionLink("Delete", "Delete",new {  id=Model.id})</button>
</p>

</div>
