@model BlindRiver.Models.service

@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    ViewBag.Title = "Update";
}
<div id="service_upd">

<h1>Update @Model.service_name</h1>
@using (Html.BeginForm()) { 
    
  @*  @Html.HiddenFor(x => x.id)*@

    @Html.LabelFor(x => x.service_name)
    <br />
    @Html.TextBoxFor(x => x.service_name,new { @class = "form-input" })
    @Html.ValidationMessageFor(x => x.service_name)
    <br /><br />   
	
	@Html.LabelFor(x => x.details)
    <br />
    @Html.TextAreaFor(x => x.details, new { @class = "form-textarea" })
    @Html.ValidationMessageFor(x => x.details)
    <br /><br />  
    
    
    @Html.LabelFor(x => x.photo)
    <br />
    @Html.TextBoxFor(x => x.photo,new { @class = "form-input" })
    @Html.ValidationMessageFor(x => x.photo)
    <br /><br />
   @* <input type="submit" value="Update" />*@
    <button class="apply">@Html.ActionLink("Update Service", "index")</button>
    <button class="apply">@Html.ActionLink("Go Back to All Services", "Index")</button>
}
</div>
