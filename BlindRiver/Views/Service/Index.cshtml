@model IEnumerable<BlindRiver.Models.service>

@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@{
    ViewBag.Title = "Index";
}
<h2>Services provided by Blind River hospital to its paitents</h2>
<ul>
    <!--displays every service in database-->
    @foreach(var x in Model)
    { 
        <li>@Html.ActionLink(x.service_name, "Details", new { id = x.id})</li>
    }
</ul>
<br /><br />    
<button class="apply">@Html.ActionLink("Insert", "Insert")</button>